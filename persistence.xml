<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0">

    <!--
        A persistence unit is a set of listed persistent entities as well
        the configuration of an EntityManagerFactory. We configure each
        example in a separate persistence-unit.
    -->
    <persistence-unit name="contact">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <!-- We must enumerate each entity in the persistence unit -->
        <class>com.levins.my.contact.Employee</class>

        <properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.connection.url" value="jdbc:mysql://192.168.12.124:3306/drupal" />
			<property name="hibernate.connection.username" value="drupal" />
			<property name="hibernate.connection.password" value="dru_PAL" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
		</properties>
    </persistence-unit>

</persistence>
